<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rosies_pie_shared.EventsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Select your Empoyee #"/>
            <StackLayout>
                <ListView x:Name="lsvAvailableEmployees" ItemsSource="{Binding Events}" >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding EventID}" Detail="{Binding EventName}" TextColor="DarkGreen"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>